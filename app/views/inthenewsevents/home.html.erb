<script>
  var search_path = "<%= inthenewsevents_search_path %>";
</script>

<%= render_overridable "partials", "inthenews_title" %>

<h2 class="inthenews_head">Events Related to African Poets</h2>

<div class="row">
  <div class="col-md-3">
    <h3>Browse</h3>
    <div class="browse_categories">
      <%= render partial: "inthenews/browse_home_display" %>
    </div>
  </div>

  <div class="col-md-9">
    <div>
      <%= render partial: "inthenews/search_text_field", locals: {
        label: "Search Events"
      } %>
      <p>
        <%= link_to "Advanced Search/View All Results",
          inthenewsevents_search_path,
          class: "btn btn-info btn-block",
          role: "button" %>
      </p>
    </div>

    <div>
      <div class="col-sm-8 decade_browse">
        <h3>Browse by Decade</h3>
        <%= render partial: "inthenews/browse_decade" %>
      </div>

      <div class="col-sm-4">
      <h3>Regions</h3>
      <%= render partial: "inthenews/group_count_table", locals: {
        facet: "spatial.region" } %>
      </div>
    </div>
  </div>
</div>
