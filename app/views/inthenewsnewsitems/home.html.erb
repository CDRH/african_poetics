<%= render_overridable "partials", "inthenews_title" %>

<h2>News</h2>

<div class="row">
  <div class="col-md-3">
    <h3>Browse</h3>
    <div class="browse_categories">
      <%= link_to "Browse All", inthenews_news_items_browse_path, 
        class: "display_callout browse_all" %>
      <%= render partial: "inthenews/browse_home_display", locals: {
        path: "inthenews_news_items_browse_facet_path"
      } %>
    </div>
  </div>

  <div class="col-md-6">
     <%= render partial: "inthenews/search_text_field", locals: {
      url: inthenews_news_items_search_path,
      label: "Search News"
    } %>
    <p>
      <%= link_to "Advanced Search/View All Results", inthenews_news_items_search_path %>
    </p>
  </div>

  <div class="col-md-3">
    <h3>News Format</h3>
      <%= render partial: "inthenews/group_count_table", locals: {
        facet: "type",
        path: "inthenews_news_items_search_path"
      } %>
  </div>
</div>
