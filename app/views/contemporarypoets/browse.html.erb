<h1>Browse Poets By:</h1>

<!-- buttons generated from yaml file -->

<% @page_facets.each_slice(2) do |slice| %>
  <div class="row buffer-bottom-lg">
    <% slice.each do |(facet_name, facet_info)| %>
      <div class="col-md-6">
        <% id = facet_name.parameterize(separator: ".") %>
        <%= link_to prefix_path("browse_facet_path", facet: id),
          html_options = {"aria-controls": id,
          class: "btn btn-lg btn-block btn-default"} do %>
          <%= facet_info["label"] %>
        <% end %>
      </div>
    <% end %>
  </div>
  
<% end %>

<!-- Adding extra buttons -->

<div class="row buffer-bottom-lg">
    <div class="col-md-12">
        <%= link_to country_path, html_options = {"aria-controls": "country_map",
          class: "btn btn-lg btn-block btn-default"} do %>
          Country Map
        <% end %>
      </div>
  </div>

  <!-- Adding featured link -->
  <div class="row buffer-bottom-lg">
    <div class="col-md-12">
        <%= link_to featured_path, html_options = {"aria-controls": "featured",
          class: "btn btn-lg btn-block btn-default"} do %>
          Featured
        <% end %>
      </div>
  </div>
