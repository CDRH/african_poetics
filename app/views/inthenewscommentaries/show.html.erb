<h1 class="sectiontitle"><%= t "inthenews.title" %></h1>

<h2 class="commentary_title"><%= @item.name %></h2>

<div class="commentary_authors">
  Author(s): <%= @item.author_credit %>
</div>

<div class="well">
  <%= sanitize @item.content %>
</div>

<% if @item.events.present? %>
  <h3>Events</h3>
  <ul>
    <% @item.events.each do |rel| %>
      <% id = db_to_es_id("event", rel.id) %>
      <li><%= link_to rel.name, inthenews_events_item_path(id: id) %></li>
    <% end %>
  </ul>
<% end %>

