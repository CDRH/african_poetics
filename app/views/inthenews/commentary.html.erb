<h1 class="sectiontitle"><%= t "inthenews.title" %></h1>

<h2><%= @item.name %></h2>
<h3><%= @item.author_credit %> | <%= @item.created_at.strftime("%Y") %></h3>

<div class="row">
  <div class="col-md-7">
    (Content of commentary will go here)
    <%= sanitize @item.content %>
  </div>
  <div class="col-md-5">

    <%# EVENT %>
    <% if @item.events.present? %>
      <h4>Events</h4>
      <ul>
        <% @item.events.each do |rel| %>
          <li><%= link_to rel.name, inthenews_event_path(rel) %></li>
        <% end %>
      </ul>
    <% end %>
    <%# NEWS ITEM %>
    <% if @item.news_items.present? %>
      <h4>News</h4>
      <ul>
        <% @item.news_items.each do |rel| %>
          <li><%= link_to rel.name, inthenews_news_item_path(rel) %></li>
        <% end %>
      </ul>
    <% end %>
    <%# PEOPLE %>
    <% if @item.people.present? %>
      <h4>People</h4>
      <ul>
        <% @item.people.each do |rel| %>
          <li><%= link_to rel.name, inthenews_poet_path(rel) %></li>
        <% end %>
      </ul>
    <% end %>
    <%# WORK %>
    <% if @item.works.present? %>
      <h4>Works</h4>
      <ul>
        <% @item.works.each do |rel| %>
          <li><%= link_to rel.name, inthenews_work_path(rel) %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
