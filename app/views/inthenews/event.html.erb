<h1 class="sectiontitle"><%= t "inthenews.title" %></h1>

<h2><%= @item.name %></h2>
<h3><%= @item.location.name %> | <%= @item.date %></h3>

<div class="row">
  <div class="col-md-7">
    <strong><%= @item.event_type.name %> event</strong>
    <% if @item.summary.present? %>
      <p><%= @item.summary %></p>
    <% end %>

    <div class="row">
      <div class="col-md-6">
        <%= render partial: "simple_association_list", locals: {
          item: @item,
          label: "Relationships",
          assoc: "people",
          path: "inthenews_poet_path"
        } %>
      </div>
    </div>
  </div>

  <div class="col-md-5">
    <% if @item.news_items.present? %>
      <div class="well">
        <%= render partial: "simple_association_list", locals: {
          item: @item,
          label: "News Items",
          assoc: "news_items",
          path: "inthenews_news_item_path"
        } %>
      </div>
    <% end %>
  </div>

</div>
