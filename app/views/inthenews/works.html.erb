<script>
  var search_path = "<%= inthenews_search_works_path %>";
</script>

<h1 class="sectiontitle"><%= t "inthenews.title" %></h1>

<h2>Works</h2>

<div class="row">

  <div class="col-md-5">
  
    <%= render partial: "search_text_field", locals: {
      url: inthenews_search_works_path,
      label: "Search Works"
    } %>
    <%= link_to "Browse All Works", inthenews_search_works_path %>

    <h3>Work Types</h3>
    <%= render partial: "group_count_table", locals: {
      collection: @work_types,
      query_param: "work_type",
      path: "inthenews_search_works_path"
    } %>
  </div>

  <div class="col-md-5" id="regions_map">
    <%= render "partials/map_africa" %>
    <h3>Regions</h3>
    <%= render partial: "group_count_table", locals: {
      collection: @regions,
      query_param: "region",
      path: "inthenews_search_works_path"
    } %>
  </div>

  <div class="col-md-2">
    <h3>Decades</h3>
    <%= render partial: "group_count_table", locals: {
      collection: @decades,
      query_param: "decade",
      path: "inthenews_search_works_path"
    } %>
  </div>

</div>
