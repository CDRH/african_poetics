<h1 class="sectiontitle"><%= t "inthenews.title" %></h1>

<h2><%= @item.name %></h2>
<h3><%= @item.date.strftime("%Y-%m-%d") if @item.date %></h3>

<div class="row">
  <div class="col-md-7">
    <% if @item.excerpt.present? %>
      <div class="well">
        <p><%= @item.excerpt %></p>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-6">
        <h3>Events:</h3>
        <% if @item.events.present? %>
          <ul>
            <% @item.events.each do |event| %>
              <li>
                <%= link_to event.name, inthenews_event_path(event) %>
              </li>
            <% end %>
          </ul>
        <% else %>
          No events associated with this news item
        <% end %>
      </div>

      <div class="col-md-6">
        <h3>Relationships</h3>

        <% if @item.news_item_roles %>
          <ul>
            <% @item.news_item_roles.each do |role| %>
              <% person = role.person %>
              <li>
                <% if person.poet_id %>
                  <%= link_to person.name, inthenews_poet_path(person) %> | <%= role.role %>
                <% else %>
                  <%= person.name %> | <%= role.role %>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          No people associated with this news item
        <% end %>
        <ul>
      </div>
    </div>
  </div>

  <div class="col-md-5">
    <h3>Citation</h3>
    <div class="well">
      <%= @item.citation %>
    </div>
  </div>

</div>
