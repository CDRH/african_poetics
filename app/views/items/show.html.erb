<% if @res %>
  <h1 class="item_title"><%= @res["alternative"] %></h1>
  <h2 class="item_subtitle">
    <% if @res["people"].present? %>
      Alternate names: <%= @res["people"] %>
    <% end %>
  </h2>

  <%# poet_metadata_contain exists so I can include image using the flex layout %>
  <div class="poet_metadata_contain">
    <% if @res["type"] == "Featured" %>
      <div class="poet_image pull-right">
        <% imageloc = "poets/" + @res["identifier"] %>
        <%= image_tag imageloc, height: "400" %>
      </div>
    <% end %>

    <%# pulling entirely from elasticsearch currently %>
    <div class="metadata">
      
      <% if @res["places"].present? %>
        <div class="author_data row">
          <div class="author_cathead col-sm-3 col-sm-offset-1"><h4>Country</h4></div>
          <div class="author_catdata col-sm-7">
            <p><%= @res["places"] %></p>
          </div>
        </div>
      <% end %>

      <% if @res["keywords"].present? %>
        <div class="author_data row">
          <div class="author_cathead col-sm-3 col-sm-offset-1"><h4>Region</h4></div>
          <div class="author_catdata col-sm-7">
            <p><%= @res["keywords"] %></p>
          </div>
        </div>
      <% end %>

      <% if @res["person"]["role"].present? %>
        <div class="author_data row">
          <div class="author_cathead col-sm-3 col-sm-offset-1"><h4>Gender</h4></div>
          <div class="author_catdata col-sm-7">
            <p><%= @res["person"]["role"]%></p>
          </div>
        </div>
      <% end %>

      <% if @res["works"].present? %>
        <div class="author_data row">
          <div class="author_cathead col-sm-3 col-sm-offset-1">
            <h4>Bibliography</h4>
          </div>
          <div class="author_catdata col-sm-7 bibliography">
            <ul>
              <% @res["works"].each do |work| %>
                <li>
                  <%= work %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <% if @res["source"].present? %>
        <div class="author_data row">
          <div class="author_cathead col-sm-3 col-sm-offset-1"><h4>Source</h4></div>
          <div class="author_catdata col-sm-7">
            <p><%= @res["source"] %></p>
          </div>
        </div>
      <% end %>

      <% if @res["person"]["id"].present? %>
        <div class="author_data row">
          <div class="author_cathead col-sm-3 col-sm-offset-1"><h4>Authority File</h4></div>
          <div class="author_catdata col-sm-7">
            <p><a href="<%= @res["person"]["id"] %>"><%= @res["person"]["id"] %></a></p>
          </div>
        </div>
      <% end %>

    </div><%# /metadata %>
  </div><%# /poet_metadata_contain %>

  <%# render "show_metadata" %>
  <%# render "show_content" %>

  <% if @res["type"] == "Featured" %>

    <% partialurl = @res["identifier"] %>
    <% completeurl = "contemporarypoets/" + partialurl %>
    <%= render partial: completeurl %>

  <% end %>

<% else %>

  <h2><%= t("item.not_found", default: "Not Found") %></h2>
  <%= t "item.no_item", id: params["id"], default: "No item with identifier #{params["id"]} found!" %>

<% end %>

