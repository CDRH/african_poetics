<% if @section.present? %>
<div class="navbar navbar-inverse">
  <div class="container navbar-container">  
    <ul class="nav navbar-nav">
      <li class="<%= active?(home_path) %>">
        <%= link_to "#{@section.titlecase} #{t("home.title", default: "Home")}", prefix_path("home_path") %>
      </li>
      <li class="<%= active?(/^#{config.relative_url_root}\/browse/,
        request.path) %>">
        <%= link_to t("browse.title", default: "Browse"), prefix_path("browse_path") %>
      </li>
      <li class="<%= active?(search_path) %>">
        <%= link_to t("search.title", default: "Search"), prefix_path("search_path"), rel: "search" %>
      </li>
    </ul>
  </div>
</div><!-- /navbar -->
<% end %>
