<%= render_overridable "partials", "inthenews_title" %>

<h2 class="item_title"><%= @res["title"] %></h2>

<h3>Summary</h3>

<% if @res["year"].present? %>
  <div>
    Date: <%= @res["year"] %>
  </div>
<% end %>

<% if @res["publisher"].present? %>
  <div>
    Publisher: <%= @res["publisher"].join(", ") %>
  </div>
<% end %>

<% if @res["location"].present? %>
  <div>
    Location: <%= @res["location"]["country"] %>, <%= @res["location"]["city"] %>
  </div>
<% end %>

<% if @res["type"].present? %>
  <div>
    Type: <%= @res["type"].join(", ") %>
  </div>
<% end %>

<% authors = @res["person"].select { |person| person["role"] == "Work Author"} %>
<% if authors.present? %>
  <h3>Authors (<%= authors.count %>)</h3>
  <ul>
  <% authors.each do |author| %>
    <% if author["id"].present?  %>
      <li><%= link_to author["name"], inthenews_poets_item_path(author["id"]) %></li>
    <% else %>
      <li><%= author["name"] %></li>
    <% end %>
  <% end %>
  </ul>
<% else %>
  <h3>Authors (0)</h3>
  No Author
<% end %>

<% if @res["person"].present? %>
  <% people = @res["person"].select { |person| person["role"] != "Work Author"} %>
  <h3>Related People (<%= people.count %>)</h3>
  <div class="item_data">
    <ul>
      <% with_id = people.select{|person| person["id"].present? } %>
      <% no_id = people.select{|person| !person["id"].present? } %>
      <% with_id.each do |person| %>
        <li>
          <%= link_to "#{person["name"]} (#{person["role"]})", inthenews_poets_item_path(person["id"]) %>
        </li>
      <% end %>
      <% no_id.each do |person| %>
        <li>
          <%= "#{person["name"]} (#{person["role"]})" %>
        </li>
      <% end %>
    </ul>
  </div><%# / .item-data %>
<% else %>
  No people associated with this news item
<% end %>

<% if @res["topics"].present? %>
  <h3>News Items (<%= @res["topics"].count %>)</h3>
  <div class="item_data">
    <ul>
      <% @res["topics"].each do |topic| %>
        <% name = /\[(.*)\]/.match(topic)[1] if /\[(.*)\]/.match(topic) %>
        <% id = /\]\((.*)\)/.match(topic)[1] if /\]\((.*)\)/.match(topic) %>
        <% if name %>
          <% if id %>
            <li><%= link_to name, inthenews_news_items_item_path(id) %></li>
          <% else %>
            <li><%= name %></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div><%# / .item-data %>
<% end %>
